# ============================================
# GKL ENGINHARIA - BACKEND CONFIGURATION
# ============================================
# SECURITY WARNING: Never commit .env file to version control!
# Copy this file to .env and fill in your actual values.

# ============================================
# SERVER CONFIGURATION
# ============================================
NODE_ENV=production
PORT=3000

# ============================================
# ADMIN PANEL CONFIGURATION
# ============================================
# Secret token for admin API access
ADMIN_TOKEN=your_secure_random_token_here
# Comma-separated list of allowed IPs (e.g. 192.168.1.1,10.0.0.1) or * for any IP
ADMIN_ALLOWED_IPS=

# ============================================
# CORS CONFIGURATION
# ============================================
# Comma-separated list of allowed origins
# Examples:
#   Development: CORS_ORIGIN=http://localhost:5173
#   Production:  CORS_ORIGIN=https://yourdomain.com
CORS_ORIGIN=

# ============================================
# EMAIL CONFIGURATION (SMTP)
# ============================================
# Option 1: Gmail SMTP
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false

# Option 2: Outlook/Hotmail SMTP
# SMTP_HOST=smtp-mail.outlook.com
# SMTP_PORT=587
# SMTP_SECURE=false

# Option 3: Custom SMTP Server
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false

# SMTP Authentication
SMTP_USER=
SMTP_PASS=

# ============================================
# EMAIL RECIPIENTS
# ============================================
# Where contact form submissions will be sent
RECIPIENT_EMAIL=

# Optional: CC addresses (comma-separated)
# CC_EMAILS=

# ============================================
# RATE LIMITING
# ============================================
# Max requests per window per IP
RATE_LIMIT_MAX=100
# Time window in minutes
RATE_LIMIT_WINDOW=15

# Stricter limits for contact form
CONTACT_RATE_LIMIT_MAX=5
CONTACT_RATE_LIMIT_WINDOW=60

# ============================================
# SECURITY HEADERS
# ============================================
# Content Security Policy
CSP_REPORT_ONLY=false

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=info
LOG_FILE=logs/app.log
